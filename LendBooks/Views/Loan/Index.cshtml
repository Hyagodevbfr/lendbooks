@model IEnumerable<LoansModel>
@{
    ViewData["Title"] = "Empréstimos";
}

   <main class="container">

       <div class="d-flex justify-content-between text-center align-items-center mb-5">
           <h1>Empréstimos</h1>
           <div>
            <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Export"><i class="bi bi-journal-check mx-2"></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Loan" asp-action="Register"><i class="bi bi-journal-check mx-2"></i>Cadastrar novo empréstimo</a>
           </div>

       </div>

        @if(TempData["SuccessMessage"] != null)
        {
           <div id="container-alert" class="alert alert-success text-black" role="alert" >
               @TempData["SuccessMessage"]
           </div> 
        }



    <table id="Loans" class="table table-dark table-hover text-light-emphasis">
        <thead>
            <tr>
                <th scope="col">Recebedor</th>
                <th scope="col">Fornecedor</th>
                <th scope="col">Livro emprestado</th>
                <th scope="col">Ultima atualização</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach(var loan in Model)
                {
                    <tr>
                        <td>@loan.Reciver</td>
                        <td>@loan.Supplier</td>
                        <td>@loan.BorrowedBook</td>
                        <td>@loan.LastUpdate</td>
                        <td>
                            <a asp-controller="Loan" asp-action="Edit" asp-route-id="@loan.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Loan" asp-action="Delete" asp-route-id="@loan.Id" class="btn btn-danger mx-2"><i class="bi bi-trash mx-2"></i>Excluir</a>
                        </td>
                    </tr>   
                }
            }
         
        </tbody>
</table>

</main>